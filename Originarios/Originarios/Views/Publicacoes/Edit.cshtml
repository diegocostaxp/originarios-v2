@model Originarios.Models.Publicacao

@{ ViewBag.Title = "Editar Publicação"; }

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Edit", "Publicacoes", FormMethod.Post, htmlAttributes: new { id = "formSalvarPost", @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_public) @*Associa id do usuário logado à publicação que será editada*@
    @Html.HiddenFor(model => model.usuario, new { Value = @ViewBag.usuario })

    <hr />
    @*-------------------------- Inputs texto --------------------------*@
<div class="row">

    <div class="form-group col-12 col-sm-12">
        <label class="control-label" for="titulo">Título:</label>
        <div class="col-12 col-sm-12">
            @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { id = "titulo", autofocus = "autofocus", @class = "form-control", @maxlength = "100", required = "required", dataError = "Um título é necessário." } })
            @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group col-12">
        <label class="control-label" for="corpo">Texto:</label>
        <div class="col-12">
            @Html.TextAreaFor(model => model.corpo, 4, 10, htmlAttributes: new { id = "corpo", @class = "form-control", @maxlength = "5000" })
            @Html.ValidationMessageFor(model => model.corpo, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group col-12 col-sm-5">
        <label class="control-label" for="locali">Local:</label>
        <div class="col-12 col-sm-11">
            @Html.EditorFor(model => model.locali, new { htmlAttributes = new { id = "locali", autofocus = "autofocus", @class = "form-control", @maxlength = "30", required = "required", dataError = "Uma localização é necessária." } })
            @Html.ValidationMessageFor(model => model.locali, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group col-2">
     <label class="control-label" for="data_public">Data:</label>
        <div class="col-12">
            @Html.TextAreaFor(model => model.data_public, 1, 10, htmlAttributes: new { id = "data_public", @class = "form-control", @maxlength = "10" })
            @Html.ValidationMessageFor(model => model.corpo, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

    <hr />
        @*-------------------------- Botões --------------------------*@
    <div class="row">
        <div class="col-6 px-2 d-flex justify-content-end">
            @Html.ActionLink("Voltar", "Index", "Publicacoes", routeValues: new { id = Model.id_public }, htmlAttributes: new { @class = "btn btn-secondary" })
        </div>
        <div class="col-6 px-2">
            <input type="submit" id="btnSalvarPublicacao" value="Salvar" class="btn btn-success" />
        </div>
    </div>}