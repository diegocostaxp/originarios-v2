@model Originarios.Models.Publicacao

@{ ViewBag.Title = "Detalhes da Publicação"; }

<h2>@ViewBag.Title</h2>

@if (ViewBag.msg != null)
{
<h5 class="text-success">@ViewBag.msg</h5>}

<hr />
@*-------------------------- Inputs texto --------------------------*@
<div class="row">

    <div class="form-group col-12 col-sm-9 pb-4">
        <span><b>Título:</b></span>
        <div class="col-12 col-sm-11">
            <span>@Html.DisplayFor(model => model.titulo)</span>
        </div>
    </div>
</div>
<hr />


<hr />
@*-------------------------- Detalhes --------------------------*@
<div class="row">
    <span class="px-0"><b>Detalhes:</b></span>
    <div class="col-12">
        <span class="text-break">@Html.DisplayFor(model => model.corpo)</span>
    </div>
</div>

<hr />

@*-------------------------- Local --------------------------*@

<div class="row">

    <div class="form-group col-12 col-sm-9 pb-4">
        <span><b>Local:</b></span>
        <div class="col-12 col-sm-11">
            <span>@Html.DisplayFor(model => model.locali)</span>
        </div>
    </div>
</div>
<hr />
@*-------------------------- Data da publicação --------------------------*@

<div class="form-group col-2">
    <label class="control-label" for="data_public">Data:</label>
    <div class="col-12">
        @Html.TextAreaFor(model => model.data_public, 1, 10, htmlAttributes: new { id = "data_public", @class = "form-control", @maxlength = "5000" })
        @Html.ValidationMessageFor(model => model.corpo, "", new { @class = "text-danger" })
    </div>
</div>


@*-------------------------- Botões --------------------------*@
<div class="row">
    @using (Html.BeginForm("Delete", "Publicações", new { id = Model.id_public }, FormMethod.Post, htmlAttributes: new { @class = "px-0 d-flex justify-content-between justify-content-sm-center" }))
    {
@Html.AntiForgeryToken()

                @Html.ActionLink("Voltar", "Index", "Publicacoes", null, htmlAttributes: new { @class = "btn btn-secondary" })
                                @Html.ActionLink("Editar", "Edit", "Publicacoes", routeValues: new { id = Model.id_public }, htmlAttributes: new { @class = "btn btn-warning mx-sm-4" })
                                                <input type="submit" value="Deletar" class="btn btn-danger" />}
</div>